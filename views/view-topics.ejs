    <!-- Topics and Subtopics Display -->
    <div class="container mt-5 vh-100">
      <div class="card mx-auto p-3">
        <div class="card-body d-flex flex-wrap topic-container">
          <!-- Loop through all topics -->
          <% topics.forEach(topic => { %>
          <div class="topic-card-container d-flex cursor-pointer" data-topic-id="<%= topic._id %>">
            <!-- Topic Card -->
            <div class="topic-card d-flex justify-content-center m-1 bg-dark text-white py-1 px-3 rounded">
              <p class="card-text m-0 p-1 small fw-bold text-center w-100 me-2">
                <%= topic.topic %>
              </p>
              <% if (topic.user && topic.user._id.toString() === currentUser._id.toString()) { %>
              <a href="/delete-add-topic/<%= topic._id %>" class="delete-icon d-flex align-items-center p-1">
                <i class="fa fa-close text-white"></i>
              </a>
              <% } %>
            </div>

            <!-- Subtopics section (initially hidden) -->
            <div class="subtopics-container d-none">
              <% subtopics.forEach(subtopic => { %>
              <% if (subtopic.topic.toString() === topic._id.toString()) { %>
              <!-- Ensure matching topic/subtopic IDs -->
              <div class="subtopic-card d-flex justify-content-center m-1 bg-light text-dark py-1 px-3 rounded">
                <p class="card-text m-0 p-1 small fw-bold text-center w-100 me-2">
                  <%= subtopic.subtopic %>
                </p>

                <!-- Show delete button if the logged-in user created the subtopic -->
                <% if (subtopic.user && subtopic.user.toString() === currentUser._id.toString()) { %>
                <a href="/delete-add-subtopic/<%= subtopic._id %>" class="delete-icon d-flex align-items-center p-1">
                  <i class="fa fa-close text-dark"></i>
                </a>
                <% } %>
              </div>
              <% } %>
              <% }); %>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
