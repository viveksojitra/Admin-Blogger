  <!-- Toggle Subtopics Visibility -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const topicCards = document.querySelectorAll(".topic-card-container");

      topicCards.forEach(card => {
        const topicCard = card.querySelector(".topic-card");
        const subtopicsContainer = card.querySelector(".subtopics-container");

        topicCard.addEventListener("click", function() {
          // Check if the clicked subtopics are currently hidden
          const isHidden = subtopicsContainer.classList.contains("d-none");

          // Hide all subtopics and remove flex from their parent containers
          topicCards.forEach(otherCard => {
            const otherSubtopicsContainer = otherCard.querySelector(".subtopics-container");
            if (otherCard !== card) {
              // Hide other subtopics
              otherSubtopicsContainer.classList.add("d-none");
              // Remove flex class from the topic card container
              otherCard.classList.remove("d-flex");
            } else {
              // If this is the clicked card and we are showing subtopics
              if (isHidden) {
                // Add flex class to the clicked topic card container
                card.classList.add("d-flex");
              } else {
                // Remove flex class if we are hiding subtopics
                card.classList.remove("d-flex");
              }
            }
          });

          // Toggle visibility of the clicked topic's subtopics
          if (isHidden) {
            // Make the clicked topic's subtopics visible
            subtopicsContainer.classList.remove("d-none");
            subtopicsContainer.classList.add("d-flex");
          } else {
            // Hide the clicked topic's subtopics if already visible
            subtopicsContainer.classList.add("d-none");
          }
        });
      });
    });
  </script>

